<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="30dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/local_viagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        tools:text="Capitólio - MG" />

                </LinearLayout>

                <ImageView android:id="@+id/estrelaViagem1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:alpha="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_estrela" />

                <ImageView android:id="@+id/estrelaViagem2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:alpha="0.3"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_estrela" />

                <ImageView android:id="@+id/estrelaViagem3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_estrela" />

                <ImageView android:id="@+id/estrelaViagem4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_estrela" />

                <ImageView android:id="@+id/estrelaViagem5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="7dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_estrela" />
            </LinearLayout>


            <TextView
                android:id="@+id/data_inicio_e_fim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="10/10/2010 até 15/10/2010" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>