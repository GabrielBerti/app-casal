<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:textColorHint="@drawable/text_input_layout">

        <EditText
            android:id="@+id/form_nome_lugar_visitado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lugar_visitado_hint"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_edittext"
            android:imeOptions="actionDone"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_legal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:text="@string/tv_legal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView android:id="@+id/formLvViagemEstrelaViagem05"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                android:src="@drawable/estrela_esquerda"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem10"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem05"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/estrela_direita" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem15"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                android:layout_marginStart="4dp"
                android:src="@drawable/estrela_esquerda"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem10"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem20"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem15"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/estrela_direita" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem25"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                android:layout_marginStart="4dp"
                android:src="@drawable/estrela_esquerda"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem20"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem30"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem25"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/estrela_direita" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem35"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                android:layout_marginStart="4dp"
                android:src="@drawable/estrela_esquerda"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem30"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem40"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem35"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/estrela_direita" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem45"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                android:layout_marginStart="4dp"
                android:src="@drawable/estrela_esquerda"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem40"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/formLvViagemEstrelaViagem50"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:alpha="0.3"
                app:layout_constraintStart_toEndOf="@id/formLvViagemEstrelaViagem45"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/estrela_direita" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>