<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_lugar_visitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="Canoa Bonita" />

        </LinearLayout>

        <ImageView android:id="@+id/estrela1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:alpha="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_estrela" />

        <ImageView android:id="@+id/estrela2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:alpha="0.3"
            android:layout_gravity="center"
            android:src="@drawable/ic_estrela" />

        <ImageView android:id="@+id/estrela3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:layout_gravity="center"
            android:alpha="0.3"
            android:src="@drawable/ic_estrela" />

        <ImageView android:id="@+id/estrela4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:layout_gravity="center"
            android:alpha="0.3"
            android:src="@drawable/ic_estrela" />

        <ImageView android:id="@+id/estrela5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="7dp"
            android:layout_gravity="center"
            android:alpha="0.3"
            android:src="@drawable/ic_estrela" />
    </LinearLayout>

</LinearLayout>